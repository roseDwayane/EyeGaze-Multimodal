{
    "train": {
        "epochs": 60,
        "lr": 0.0,
        "optimizer": {
            "type": "Adam",
            "betas": [
                0.9,
                0.98
            ],
            "eps": 1e-09
        },
        "scheduler": {
            "type": "Noam",
            "factor": 1.0,
            "warmup": 400
        },
        "loss": {
            "type": "mse",
            "zscore": true
        },
        "metrics": [
            "mse",
            "mae"
        ],
        "data_loader": {
            "batch_size": 32,
            "num_workers": 8,
            "pin_memory": true
        },
        "save_dir": "./checkpoints",
        "resume": false,
        "resume_path": "./checkpoints/checkpoint.pth"
    },
    "model": {
        "in_channels": 30,
        "out_channels": 30,
        "embedding_size": 128,
        "feedforward_size": 2048,
        "num_encoder_layers": 2,
        "num_decoder_layers": 2,
        "num_heads": 8,
        "dropout": 0.1,
        "max_len": 2048,
        "pos_mode": "sinusoidal",
        "recon_log_softmax": false,
        "recon_zscore": null
    },
    "data": {
        "root": "./synthetic",
        "splits": {
            "train": {
                "C": 30,
                "T": 1024,
                "sample_rate": 256.0,
                "length": 5000,
                "target": { "mode": "sine", "noise_std": 0.0, "num_components": 4 },
                "attr": { "mode": "mixed", "noise_std": 0.15, "num_components": 4 }
            },
            "val": {
                "C": 30,
                "T": 1024,
                "sample_rate": 256.0,
                "length": 500,
                "target": { "mode": "sine", "noise_std": 0.0, "num_components": 3 },
                "attr": { "mode": "mixed", "noise_std": 0.15, "num_components": 3 }
            },
            "test": {
                "C": 30,
                "T": 1024,
                "sample_rate": 256.0,
                "length": 500,
                "target": { "mode": "sine", "noise_std": 0.0, "num_components": 3 },
                "attr": { "mode": "mixed", "noise_std": 0.15, "num_components": 3 }
            }
        }
    },
    "real_data": {
        "root": "./Real_EEG",
        "splits": {
            "train": ["S001.csv", "S002.csv", "S003.csv"],
            "val":   ["S101.csv", "S102.csv"],
            "test":  ["S201.csv"]
        }
    }
}
